{
  "$schema": "http://json.schemastore.org/prettierrc",
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "none",
  "plugins": ["prettier-plugin-svelte"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "useTabs": true,
        "parser": "svelte",
        "svelteSortOrder": "options-scripts-markup-styles" 
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "useTabs": true
      }
    }
  ]
}
